import requests

def get_formula_from_pubchem(name):
    base_url = "https://pubchem.ncbi.nlm.nih.gov/rest/pug/compound/name/"
    url = base_url + name + "/property/MolecularFormula/txt"
    
    response = requests.get(url)
    if response.status_code == 200:
        return response.text.strip()
    else:
        return "Nombre de compuesto no encontrado en PubChem."

# Ejemplo de uso
print(get_formula_from_pubchem("water"))  # H2O
print(get_formula_from_pubchem("glucose"))  # C6H12O6
print(get_formula_from_pubchem("ethanol"))  # C2H6O
